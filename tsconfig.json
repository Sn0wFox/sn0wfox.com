{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": ".",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "custom_typings"
    ],
    "lib": ["es6", "dom"]
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
