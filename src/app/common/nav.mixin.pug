// Create a responsive navbar with the given links
// Links is a map of label:href
mixin navbar(links)
  nav#snfx-site-nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
    .container
      // Logo and responsive toggle
      .navbar-header
        button.navbar-toggle(type="button" data-toggle="collapse" data-target="#snfx-navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          span
            img#snfx-logo(src="/assets/images/logo.png" alt="Sn0wFox logo")
            img#snfx-logo-orange(src="/assets/images/logo-orange.png" alt="Sn0wFox logo - orange")
            |  Sn0wFox
      // Navbar links
      .collapse.navbar-collapse#snfx-navbar
        ul.nav.navbar-nav.navbar-right
          each link, label in links
            li
              a(href=link)= label